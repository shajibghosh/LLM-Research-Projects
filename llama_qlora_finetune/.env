# Environment variables for the training script
# This file should be placed in the root directory of your project
# and loaded using a library like python-dotenv.
# Example: from dotenv import load_dotenv; load_dotenv()

# HuggingFace + W&B credentials
HF_TOKEN=<your_hf_token>
WANDB_API_KEY=<your_wandb_api_key>

# Logging + Tracking
USE_WANDB=true
WANDB_PROJECT=llama-finetune
WANDB_NAME=lora-qlora-run

# Model upload to HuggingFace (optional)
USE_HF_UPLOAD=false

# Checkpointing + Resume
SAVE_EVERY_EPOCH=1
RESUME_PATH=finetuned_model/checkpoint_epoch_1